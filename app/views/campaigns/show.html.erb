<% provide(:title, "Campaign Overview")%>

<div class="flex container mx-auto px-4 mt-3">
  <div class="w-full">
    <div class="w-full mx-auto my-4">
      <div class="flex justify-between my-3">
        <div>
          <%= link_to new_campaign_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
            <i class="fa-solid fa-plus"></i> Create Campaign
          <% end %>
        </div>
      </div>
      <div class="p-0">
        <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                              Name
                            </th>
                            <th scope="col" class="px-6 py-3">
                              Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                              Contact Number
                            </th>
                            <th scope="col" class="px-6 py-3">
                              Message Status
                            </th>
                            <th scope="col" class="px-6 py-3">
                              Created At
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @broadcasts.each do |broadcast| %>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                          <td class="px-6 py-4">
                            <%= broadcast.receiver_name %>
                          </td>
                          <td class="px-6 py-4">
                            <%= broadcast.receiver_email %>
                          </td>
                          <td class="px-6 py-4">
                            <%= broadcast.receiver_contact_number %>
                          </td>
                          <td class="px-6 py-4">
                            <%= broadcast.message_status %>
                          </td>
                          <td class="px-6 py-4">
                            <%= broadcast.created_at.strftime("%B, %d, %Y") %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
            </div>
        <%= paginate @broadcasts, :class=>"bg-gray-700"%>
      </div>
    </div>
  </div>
</div>