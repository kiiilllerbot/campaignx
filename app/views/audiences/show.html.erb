<% provide(:title, "Your Audience")%>

<section>
  <div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1">
      <div class="w-full max-w-7xl mx-auto my-4 bg-white shadow-xl rounded-xl">
        <div class="p-6 lg:text-center">
          <span class="mb-8 text-xs font-semibold tracking-widest text-blue-600 uppercase"> Audience Profile</span>
          <h4 class="mt-8 text-2xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-3xl"><%= @audience.name %></h4>
          <p class="mt-3 text-base leading-relaxed text-gray-500">
            <div>
              <div><i class="fa-solid fa-pizza-slice"></i> Added Since: <%= @audience.created_at.strftime("%B, %d, %Y")%></div>
            </div>
          </p>

          <div class="mt-4">
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Name
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Contact Number
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                          <td class="px-6 py-4">
                            <%= @audience.name %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @audience.email %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @audience.contact_number %>
                          </td>
                        </tr>
                    </tbody>
                </table>
            </div>
          </div>
          <div class="mt-6">
            <%= link_to edit_audience_path(@audience), :class=>"flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-gray-700 rounded-xl hover:bg-gray-800 focus:outline-none" do %>
              <i class="fa-sharp fa-regular fa-pen-to-square mr-2"></i> Update Audience
            <% end %>

            <%= link_to audience_path(@audience), data:{"turbo-method": :delete, "turbo-confirm": "Are you sure"}, :class=>"mt-3 flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-red-400 rounded-xl hover:bg-red-500 focus:outline-none" do %>
              <i class="fa-sharp fa-regular fa-pen-to-square mr-2"></i> Delete Audience
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
