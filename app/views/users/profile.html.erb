<% provide(:title, "Your Profile")%>

<section>
  <div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl">
    <div class="grid grid-cols-1">
      <div class="w-full max-w-7xl mx-auto my-4 bg-white shadow-xl rounded-xl">
        <div class="p-6 lg:text-center">
          <span class="mb-8 text-xs font-semibold tracking-widest text-blue-600 uppercase"> Profile</span>
          <h4 class="mt-8 text-2xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-3xl"><%= @user.name.full %></h4>
          <p class="mt-3 text-base leading-relaxed text-gray-500">
            <div>
              <div><i class="fa-solid fa-pizza-slice"></i> Member Since: <%= @user.created_at.strftime("%B, %d, %Y")%></div>
            </div>
          </p>

          <div class="mt-4">
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Wallet Balance
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Email
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Brand
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Address
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Contact Number
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Current IP
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                          <td class="px-6 py-4">
                            <%= @user.wallet.balance %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @user.email %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @user.brand %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @user.address %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @user.contact_number %>
                          </td>
                          <td class="px-6 py-4">
                            <%= @user.current_sign_in_ip %>
                          </td>
                        </tr>
                    </tbody>
                </table>
            </div>
          </div>
          <div class="mt-6">
            <%= link_to edit_user_registration_path, :class=>"flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-gray-700 rounded-xl hover:bg-gray-800 focus:outline-none" do %>
              <i class="fa-solid fa-angle-right mr-1"></i> Update Profile
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
